<!--  Details.html ; Gagandeep Singh ;  page that provides Favourite Books Add and Edit functionality  -->

<!-- Inculeded Book list index and home page in navigation --> 
<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <!--  Header section start  -->
          <h1><%= title %></h1>
          <!-- Form section start-->
            <form class="form" method="post">
              <!-- If Add option is selected then render below section-->
              <% if(title == "Add Book" ) { %>
              <div class="form-group">
                <label for="NameTextField">Title</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Book Name" name="title" value="" required>
              </div>
              <div class="form-group">
                <label for="PriceTextField">Price</label>
                <input type="number" class="form-control" id="PriceTextField"
                placeholder="Book Price" name="price" value=""  required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Author</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Book Author" name="author" value=""  required>
              </div>
              <div class="form-group">
                <label for="GenreTextField">Genre</label>
                <input type="text" class="form-control" id="GenreTextField"
                placeholder="Book Genre" name="genre" value=""  required>
              </div>
              <!-- ElseIf edit option is selected then render below section with pre filed data-->
              <% } else if(title == "Edit Book") { %>
                <div class="form-group">
                  <label for="NameTextField">Title</label>
                  <input type="text" class="form-control" id="NameTextField"
                  placeholder="Book Name" name="title" value="<%= book.Title %>" required>
                </div>
                <div class="form-group">
                  <label for="PriceTextField">Price</label>
                  <input type="number" class="form-control" id="PriceTextField"
                  placeholder="Book Price" name="price" value="<%= book.Price %>"  required>
                </div>
                <div class="form-group">
                  <label for="AuthorTextField">Author</label>
                  <input type="text" class="form-control" id="AuthorTextField"
                  placeholder="Book Author" name="author" value="<%= book.Author %>"  required>
                </div>
                <div class="form-group">
                  <label for="GenreTextField">Genre</label>
                  <input type="text" class="form-control" id="GenreTextField"
                  placeholder="Book Genre" name="genre" value="<%= book.Genre %>"  required>
                </div>
                <% } %>
                <!-- Submit button works same for both as it will post data set in content and return back to Books list page-->
              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/books" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
            <!-- Form section ends-->
            <!-- Header section ends-->
        </div>
      </div>
    </div>

<!-- Footer inculded  -->
<% include ../partials/footer.ejs %>

